# ----------------------------------------------------------------------------
# Apache Maven Wrapper startup script
# ----------------------------------------------------------------------------

if [ -z "$MAVEN_SKIP_RC" ]; then
  if [ -f /usr/local/etc/mavenrc ]; then . /usr/local/etc/mavenrc; fi
  if [ -f /etc/mavenrc ]; then . /etc/mavenrc; fi
  if [ -f "$HOME/.mavenrc" ]; then . "$HOME/.mavenrc"; fi
fi

cygwin=false
darwin=false
mingw=false
case "$(uname)" in
  CYGWIN*) cygwin=true ;;
  MINGW*) mingw=true ;;
  Darwin*) darwin=true
    if [ -z "$JAVA_HOME" ] && [ -x "/usr/libexec/java_home" ]; then
      JAVA_HOME="$(/usr/libexec/java_home)"
      export JAVA_HOME
    fi
    ;;
esac

if [ -z "$JAVA_HOME" ]; then
  if [ -r /etc/gentoo-release ]; then
    JAVA_HOME=$(java-config --jre-home)
  fi
fi

if [ -z "$JAVACMD" ]; then
  if [ -n "$JAVA_HOME" ]; then
    if [ -x "$JAVA_HOME/jre/sh/java" ]; then
      JAVACMD="$JAVA_HOME/jre/sh/java"
    else
      JAVACMD="$JAVA_HOME/bin/java"
    fi
  else
    JAVACMD="$(command -v java)"
  fi
fi

if [ ! -x "$JAVACMD" ]; then
  echo "Error: JAVA_HOME is not set or java is not in PATH." >&2
  exit 1
fi

find_maven_basedir() {
  if [ -z "$1" ]; then
    echo "Path not specified to find_maven_basedir" >&2
    return 1
  fi
  basedir="$1"
  wdir="$1"
  while [ "$wdir" != '/' ]; do
    if [ -d "$wdir/.mvn" ]; then
      basedir=$wdir
      break
    fi
    if [ -d "$wdir" ]; then
      wdir="$(cd "$wdir/.." && pwd)"
    fi
  done
  printf '%s' "$(cd "$basedir" && pwd)"
}

trim() {
  printf "%s" "${1}" | tr -d '[:space:]'
}

BASE_DIR=$(find_maven_basedir "$(dirname "$0")")
[ -z "$BASE_DIR" ] && exit 1

MAVEN_PROJECTBASEDIR=${MAVEN_BASEDIR:-"$BASE_DIR"}
export MAVEN_PROJECTBASEDIR

log() {
  [ "$MVNW_VERBOSE" = true ] && printf '%s\n' "$1"
}

wrapperJarPath="$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.jar"
if [ -r "$wrapperJarPath" ]; then
  log "Found $wrapperJarPath"
else
  log "Couldn't find $wrapperJarPath, downloading it ..."
  wrapperUrl="https://repo.maven.apache.org/maven2/org/apache/maven/wrapper/maven-wrapper/3.3.2/maven-wrapper-3.3.2.jar"
  if [ -f "$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.properties" ]; then
    while IFS="=" read -r key value; do
      case "$key" in
        wrapperUrl) wrapperUrl=$(trim "${value-}"); break ;;
      esac
    done <"$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.properties"
  fi
  log "Downloading from: $wrapperUrl"
  mkdir -p "$(dirname "$wrapperJarPath")"
  if command -v curl >/dev/null; then
    curl -sL -o "$wrapperJarPath" "$wrapperUrl" -f || rm -f "$wrapperJarPath"
  elif command -v wget >/dev/null; then
    wget -q -O "$wrapperJarPath" "$wrapperUrl" || rm -f "$wrapperJarPath"
  else
    echo "Need curl or wget to download Maven Wrapper jar." >&2
    exit 1
  fi
fi

if [ ! -r "$wrapperJarPath" ]; then
  echo "Could not find or download maven-wrapper.jar" >&2
  exit 1
fi

MAVEN_OPTS="${MAVEN_OPTS:+"$MAVEN_OPTS "}$(cat "$MAVEN_PROJECTBASEDIR/.mvn/jvm.config" 2>/dev/null | tr -s '\r\n' ' ')"
MAVEN_CMD_LINE_ARGS="$MAVEN_CONFIG $*"
export MAVEN_CMD_LINE_ARGS

WRAPPER_LAUNCHER=org.apache.maven.wrapper.MavenWrapperMain

exec "$JAVACMD" \
  $MAVEN_OPTS \
  $MAVEN_DEBUG_OPTS \
  -classpath "$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.jar" \
  "-Dmaven.multiModuleProjectDirectory=${MAVEN_PROJECTBASEDIR}" \
  ${WRAPPER_LAUNCHER} $MAVEN_CONFIG "$@"
